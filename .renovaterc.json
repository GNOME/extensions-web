{
  "extends": ["security:only-security-updates"],

  "prConcurrentLimit": 1,

  "vulnerabilityAlerts": {
    "enabled": true,
    "groupName": "renovate security updates",
    "labels": ["security", "dependencies"]
  },

  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "groupName": "renovate security updates",
      "labels": ["security", "dependencies"]
    }
  ]
}
